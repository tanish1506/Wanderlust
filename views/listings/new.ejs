<% layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            
            <br>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-2">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" class="form-control"  required/>
                    <div class="valid-feedback">Title looks good!!</div>
                    <div class="invalid-feedback">Enter catchy Title!!</div>
                </div>
                
                <div class="mb-2">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                </div>

                <div class="mb-2"> 
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" required name="listing[image]" class="form-control">
                </div>
                
                <div class="row">
                    <div class="mb-2 col-md-4"> 
                        <label for="price" class="form-label">Price</label>
                        <input type="text" name="listing[price]" class="form-control" required>
                        <div class="invalid-feedback">Please enter valid price!!</div>
                    </div>

                    <div class="mb-2 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" class="form-control" required>
                        <div class="invalid-feedback">Please enter valid Location!!</div>
                    </div>
                    
                </div>
                <div class="mb-2 col-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" class="form-control" required>
                    <div class="invalid-feedback">Please enter valid Country!!</div> 
                </div>
                <br><br>
                <button class="btn btn-dark add-btn">Add</button><br>
            </form>
        </div>
    </div>
</body>